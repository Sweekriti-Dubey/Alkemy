{
  "hosting": {
    "public": "public",  
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/signup.html",
        "destination": "/signup.html"
      },
      {
        "source": "/login.html",
        "destination": "/login.html"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ]
  }
}
